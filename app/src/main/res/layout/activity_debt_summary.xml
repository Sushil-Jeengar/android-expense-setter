<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/debtSummaryLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F9FAFB">

    <!-- 🧾 Header -->
    <TextView
        android:id="@+id/tvDebtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Debt Summary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#111827"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- 💰 Net Balances Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Net Balances"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:layout_marginBottom="8dp" />

    <!-- 📋 Net Balances List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:elevation="2dp"
        android:padding="12dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/netBalanceListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#E5E7EB"
            android:dividerHeight="1dp"
            android:listSelector="@android:color/darker_gray"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- 🔻 Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CBD5E1"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

    <!-- 🔁 Settlement Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Suggested Settlements"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:layout_marginBottom="8dp" />

    <!-- 🔄 Settlement List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_card"
        android:elevation="2dp"
        android:padding="12dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/settlementListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#E5E7EB"
            android:dividerHeight="1dp"
            android:listSelector="@android:color/darker_gray"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- ✅ Empty Message -->
    <TextView
        android:id="@+id/tvDebtEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All members are settled up!"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="#6B7280"
        android:gravity="center"
        android:padding="14dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_empty_state"
        android:visibility="gone" />
</LinearLayout>
