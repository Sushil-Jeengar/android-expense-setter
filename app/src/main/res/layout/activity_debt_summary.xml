<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/debtSummaryLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Header Title -->
    <TextView
        android:id="@+id/tvDebtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Debt Summary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1E293B"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Net Balances List -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Net Balances"
        android:textSize="16sp"
        android:textColor="#334155"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/netBalanceListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#E5E7EB"
        android:dividerHeight="1dp"
        android:background="#F9FAFB"
        android:padding="8dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D1D5DB"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp" />

    <!-- Settlement List -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Suggested Settlements"
        android:textSize="16sp"
        android:textColor="#334155"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/settlementListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#E5E7EB"
        android:dividerHeight="1dp"
        android:background="#F9FAFB"
        android:padding="8dp" />

    <!-- Empty State Message -->
    <TextView
        android:id="@+id/tvDebtEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All members are settled up!"
        android:visibility="gone"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="#6B7280"
        android:textSize="15sp"
        android:padding="12dp"
        android:layout_marginTop="12dp" />
</LinearLayout>
