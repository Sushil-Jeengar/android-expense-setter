<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="3dp"
    android:background="@drawable/expense_card_background"
    android:backgroundTint="#F1F5F9">

    <!-- ðŸ‘¤ Payer & ðŸ’° Amount -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvPayerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paid by: Sushil"
            android:textStyle="bold"
            android:textColor="#111827"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹ 500"
            android:textSize="15sp"
            android:textColor="#059669"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ðŸ“… Date -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 09 June 2025"
        android:textSize="14sp"
        android:textColor="#64748B"
        android:layout_marginTop="4dp" />

    <!-- ðŸ“ Description -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lunch at Canteen"
        android:textSize="14sp"
        android:textColor="#374151"
        android:layout_marginTop="2dp" />

    <!-- ðŸ‘¥ Group Name Centered -->
    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group: Roommates"
        android:textSize="13sp"
        android:textColor="#94A3B8"
        android:layout_marginTop="6dp"
        android:gravity="center" />

    <!-- ðŸ“Š Balance Summary Button (Centered) -->
    <Button
        android:id="@+id/btnBalanceSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance Summary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:backgroundTint="#14B8A6"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="2dp" />
</LinearLayout>
