<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debt Summary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:gravity="center"
            android:paddingBottom="12dp" />

        <!-- Section Title: Net Balances -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net Balances"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#0F172A"
            android:paddingBottom="6dp" />

        <!-- Card View -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_background"
            android:padding="16dp"
            android:elevation="3dp">

            <!-- Net Balance Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="— Net balance per member —"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:paddingBottom="8dp" />

            <!-- Dynamic balances container -->
            <LinearLayout
                android:id="@+id/balanceContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E7EB"
                android:layout_marginVertical="12dp" />

            <!-- Minimal Transactions Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="— Minimal transactions —"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:paddingBottom="8dp" />

            <!-- Dynamic transactions container -->
            <LinearLayout
                android:id="@+id/transactionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
