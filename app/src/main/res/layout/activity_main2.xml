<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- 🔙 Back Button -->
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_revert"
        android:contentDescription="Back"
        android:tint="#1E293B"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etGroupName"
        android:layout_marginBottom="24dp" />

    <!-- ✏️ Group Name -->
    <EditText
        android:id="@+id/etGroupName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Group Name"
        android:textColor="#111827"
        android:textSize="16sp"
        android:inputType="textCapWords"
        android:padding="14dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toBottomOf="@id/imageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 👤 Member Name -->
    <EditText
        android:id="@+id/etMemberName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Member Name"
        android:textColor="#111827"
        android:textSize="16sp"
        android:inputType="textCapWords"
        android:padding="14dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toBottomOf="@id/etGroupName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- ➕ Add Member Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Member"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:cornerRadius="16dp"
        app:backgroundTint="#14B8A6"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/etMemberName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- 👥 Member List -->
    <ListView
        android:id="@+id/memberListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="#E5E7EB"
        android:dividerHeight="1dp"
        android:background="#F9FAFB"
        android:padding="6dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/btnAddMember"
        app:layout_constraintBottom_toTopOf="@id/btnCreateGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <!-- ✅ Create Group Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create Group"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:cornerRadius="16dp"
        app:backgroundTint="#14B8A6"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/btnViewGroups"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- 📂 View Groups Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewGroups"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Groups"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:cornerRadius="16dp"
        app:backgroundTint="#14B8A6"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
