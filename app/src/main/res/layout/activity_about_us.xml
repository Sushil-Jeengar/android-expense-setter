<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About This App"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="12dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app helps users manage and track group expenses easily.\n\nYou can:\n• Create groups\n• Add members\n• Record expenses\n• View summaries\n• Settle debts quickly\n\nPerfect for trips, roommates, or any shared spending."
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:textColor="#475569" />
    </LinearLayout>
</ScrollView>
